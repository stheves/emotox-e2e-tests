{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "lib": ["es6", "dom"],
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": [
            "cypress",
            "@testing-library/cypress",
            "node",
            "@cypress-audit/lighthouse",
            "@cypress-audit/pa11y",
            "cypress-real-events"
        ]
    },
    "include": ["**/*.ts"]
}
